    <div class="col-sm-3 col-md-offset-4  container">

      <form class="form-signin" action="/account/input" onSubmit="return check()"  method="post" role="form">
        <h2 class="form-signin-heading">Create Account</h2>
        <input type="text" name="user_id" class="form-control" placeholder="User ID" required>
        <input type="password" name="password" id="pass" class="form-control" placeholder="Password" required>
        <input type="password" name="password_again" id="rpass" class="form-control" placeholder="Retype Password" required>
        <br>
        <button id="submit" class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
      </form>

    </div> 



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script>

    $('#submit').on ('click', function () {
    if ($('#pass').val() !== $('#rpass').val()) {
      alert("パスワードが一致しません");
     return false;
    }
    });


    </script>





  </body>
